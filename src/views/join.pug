extends base

block content 
    if errorMessage 
        span=errorMessage
    form(action="", method="post") 
        input(placeholder="email" name="email", type="email", requireed)
        input(placeholder="username" name="username", type="text", requireed)
        input(placeholder="password" name="password", type="password", requireed)
        input(placeholder="comfirm", name="password2", type="password",requireed)
        input(placeholder="name" name="name", type="text", requireed)
        input(placeholder="location" name="location", type="text", requireed)
        input(type="submit", value="Join")
        include partials/social-login
    div.auth-switch 
        span 계정이 존재하나요? 
        a(href="/login") login &rarr;